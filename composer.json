{
  "name": "luminar-organization/router",
  "description": "A lightweight and flexible router for the Luminar Framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Patryk Molenda",
      "email": "patryk.fr.molenda@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "luminar-organization/core": "dev-main",
    "luminar-organization/http": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": ">=11.3.1"
  },
  "autoload": {
    "psr-4": {
      "Luminar\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Luminar\\Router\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml"
  },
  "minimum-stability": "dev"
}
